{
  "name": "GitFood",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "GitFood extension with DDP connection",
  "homepage_url": "http://shri.online",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "GitFood Extension",
    "default_popup": "src/popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
